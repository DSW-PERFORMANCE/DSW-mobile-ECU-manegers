      "label": "Ignição",
      "icon": "bi-lightning",
      "children": [
        {
          "id": "ignicao_avanco",
          "label": "Avanço de Ignição",
          "icon": "bi-speedometer",
          "widgets": [
            {
              "type": "slider",
              "title": "Avanço Base",
              "help": "Avanço de ignição em graus",
              "command": "ign_advance",
              "min": 0,
              "max": 40,
              "default": 15,
              "unit": "°"
            }
          ]
        },
        {
          "id": "ignicao_bobinas",
          "label": "Bobinas",
          "icon": "bi-plug",
          "widgets": [
            {
              "type": "slider",
              "title": "Tempo de Carga",
              "help": "Tempo de carga das bobinas",
              "command": "ign/dl_base",
